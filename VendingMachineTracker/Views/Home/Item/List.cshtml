@model IEnumerable<Item>
@{
    ViewData["Title"] = "List Items";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th><div class ="d-none">Item Modification</div></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name</td>
                <td style="display: ruby">
                    <!-- <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> -->
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> | 
                    <form asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <button type="submit"
                            class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this item?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        
    @if (Model.Count() <= 0)
    {
        <p class="alert-info">No Items</p>
    }
    </tbody>
    <a class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="Add">New</a>
</table>
